generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum precedence {
  PRIMARY
  SECONDARY
}

model Contact {
  id             Int         @id @default(autoincrement())
  phoneNumber    String?
  email          String?
  linkedId       Int?
  primaryContact Contact?    @relation("ContactLink", fields: [linkedId], references: [id])
  contacts       Contact[]   @relation("ContactLink")
  linkPrecedence precedence  @default(PRIMARY)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  deletedAt      DateTime?
  @@index([deletedAt])
}